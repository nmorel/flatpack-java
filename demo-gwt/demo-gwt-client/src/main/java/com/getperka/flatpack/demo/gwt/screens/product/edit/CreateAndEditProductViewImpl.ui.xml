<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:gwt="urn:import:com.getperka.flatpack.demo.gwt.ui.widget" xmlns:e="urn:import:com.google.gwt.editor.ui.client">
  <ui:style>

  </ui:style>

  <g:HTMLPanel>
    <table>
      <tr>
        <td>Id :</td>
        <td>
          <g:ValueLabel ui:field='uuid' />
        </td>
      </tr>
      <tr>
        <td>Creation date :</td>
        <td>
          <g:DateLabel ui:field='creationDate' />
        </td>
      </tr>
      <tr>
        <td>Last modification :</td>
        <td>
          <g:DateLabel ui:field='modificationDate' />
        </td>
      </tr>
      <tr>
        <td>Name :</td>
        <td>
          <e:ValueBoxEditorDecorator ui:field='name'>
            <e:valuebox>
              <g:TextBox />
            </e:valuebox>
          </e:ValueBoxEditorDecorator>
        </td>
      </tr>
      <tr>
        <td>Notes :</td>
        <td>
          <e:ValueBoxEditorDecorator ui:field='notes'>
            <e:valuebox>
              <g:TextBox />
            </e:valuebox>
          </e:ValueBoxEditorDecorator>
        </td>
      </tr>
      <tr>
        <td>Price :</td>
        <td>
          <e:ValueBoxEditorDecorator ui:field='price'>
            <e:valuebox>
              <gwt:BigDecimalBox />
            </e:valuebox>
          </e:ValueBoxEditorDecorator>
        </td>
      </tr>
      <tr>
        <td>
          <g:Button ui:field='validate'>Validate</g:Button>
        </td>
        <td>
          <g:Button ui:field='cancel'>Cancel</g:Button>
        </td>
      </tr>
    </table>
  </g:HTMLPanel>
</ui:UiBinder>